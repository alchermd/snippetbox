{{template "base" .}}

{{define "title"}}Create a new snippet{{end}}

{{define "main"}}
<form action="/snippet/create" method="POST">
    {{.CSRFTemplateTag}}
    <div>
        <label for="title">Title:</label>
        {{with .Form.Errors.title}}
        <label class="error">{{.}}</label>
        {{end}}
        <input type="text" name="title" id="title" value='{{.Form.Get "title"}}'>
    </div>

    <div>
        <label for="content">Content:</label>
        {{with .Form.Errors.content}}
        <label class="error">{{.}}</label>
        {{end}}
        <textarea name="content" id="content">{{.Form.Get "content"}}</textarea>
    </div>

    <div>
        <label for="expires">Delete in:</label>
        {{with .Form.Errors.expires}}
        <label class="error">{{.}}</label>
        {{end}}
        {{$exp := or (.Form.Get "expires") "365"}}
        <input type="radio" name="expires" id="expires" value="365" {{if (eq $exp "365" )}} checked {{end}}> One Year
        <input type="radio" name="expires" id="expires" value="7" {{if (eq $exp "7" )}} checked {{end}}> One Week
        <input type="radio" name="expires" id="expires" value="1" {{if (eq $exp "1" )}} checked {{end}}> One Day
    </div>

    <div>
        <input type="submit" value="Publish snippet">
    </div>
</form>
{{end}}